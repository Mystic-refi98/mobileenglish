<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:theme="@style/Theme.AppCompat.Light"
    tools:context=".MainMenu">


    <ImageView
        android:id="@+id/img_mainmenu2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.218"
        app:srcCompat="@drawable/img_mainmenu" />

    <TextView
        android:id="@+id/txt_slogan1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="36dp"
        android:fontFamily="cursive"
        android:scaleType="center"
        android:text="Anyone, Anywhere, Anytime"
        android:textColor="#FF1100"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_mainmenu2"
        app:layout_constraintTop_toBottomOf="@+id/img_mainmenu2"
        tools:layout_editor_absoluteX="188dp" />

    <Button
        android:id="@+id/signin"
        android:layout_width="231dp"
        android:layout_height="71dp"
        android:layout_marginStart="255dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="258dp"
        android:layout_marginBottom="9dp"
        android:backgroundTint="#007065"
        android:fontFamily="sans-serif"
        android:scaleType="center"
        android:text="Sign in"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/trial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_slogan1">

    </Button>

    <Button
        android:id="@+id/trial"
        android:layout_width="235dp"
        android:layout_height="74dp"
        android:layout_marginStart="216dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="217dp"
        android:layout_marginBottom="191dp"
        android:backgroundTint="#FF9800"
        android:fontFamily="sans-serif"
        android:scaleType="center"
        android:text="Try our programs"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signin"
        app:layout_constraintVertical_bias="0.0">

    </Button>

    <ImageView
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="506dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="12dp"
        android:scaleType="center"
        app:layout_constraintBottom_toTopOf="@+id/img_mainmenu2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/about_logo">

    </ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>
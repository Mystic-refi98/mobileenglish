<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout13"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/img_me"
        android:layout_width="411dp"
        android:layout_height="383dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="34dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/txt_powerdby"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/me" />

    <TextView
        android:id="@+id/txt_powerdby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="174dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="173dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Powered by"
        android:textColor="#050505"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_me" />

    <ImageView
        android:id="@+id/img_jpc"
        android:layout_width="79dp"
        android:layout_height="53dp"
        android:layout_marginStart="166dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="166dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_powerdby"
        app:srcCompat="@drawable/logo_jpc" />

    <TextView
        android:id="@+id/txt_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="185dp"
        android:layout_marginTop="197dp"
        android:layout_marginEnd="186dp"
        android:layout_marginBottom="112dp"
        android:text="Version 1.0"
        android:textColor="#393939"
        android:textSize="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_jpc" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_mainmenu"
    android:theme="@style/Theme.AppCompat.Light"
    tools:context=".MainMenu">


    <ImageView
        android:id="@+id/img_mainmenu2"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="11dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.281"
        app:srcCompat="@drawable/img_mainmenu" />

    <TextView
        android:id="@+id/txt_slogan1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:scaleType="center"
        android:text="Anyone, Anywhere, Anytime"
        android:textColor="#FF1100"
        android:textSize="22dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="217dp" />

    <Button
        android:id="@+id/signin"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:backgroundTint="#007065"
        android:fontFamily="sans-serif"
        android:scaleType="center"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_mainmenu2">

    </Button>

    <Button
        android:id="@+id/trial"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginStart="63dp"
        android:layout_marginEnd="57dp"
        android:backgroundTint="#FF9800"
        android:fontFamily="sans-serif"
        android:scaleType="center"
        android:text="Coba program kami"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signin">

    </Button>

    <ImageView
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="272dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="1dp"
        android:scaleType="center"
        app:layout_constraintBottom_toTopOf="@+id/img_mainmenu2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/information">

    </ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>
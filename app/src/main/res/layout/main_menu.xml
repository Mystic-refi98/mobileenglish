<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainMenu">


       <ImageView
        android:id="@+id/img_mainmenu2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="200dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/main_menu_2"
        tools:layout_editor_absoluteX="55dp" />


    <TextView
        android:id="@+id/txt_slogan1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="-250dp"
        android:layout_marginTop="50dp"
        android:fontFamily="cursive"
        android:text="Anyone, Anywhere, Anytime"
        android:textColor="#FF1100"
        android:textSize="22dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/signin"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:backgroundTint="#007065"
        android:fontFamily="sans-serif"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="-210dp"
        android:text="Sign in"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textStyle="bold"

        android:background="@drawable/roundedbutton"

        >

    </Button>

    <Button
        android:id="@+id/trial"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#FF9800"
        android:fontFamily="sans-serif"
        android:text="Try our programs"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="-180dp"

        >

    </Button>

    <ImageView
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        app:srcCompat="@drawable/about_logo"
        
        >

    </ImageView>
</LinearLayout>